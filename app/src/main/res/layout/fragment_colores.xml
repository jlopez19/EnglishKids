<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_colores"
    tools:context="com.sena.jennyferlopez.englishkids.activities.dos.ColoresFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.03"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.035"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:id="@+id/tv_puntosAc"
            android:text="0"
            android:gravity="center|top"
            android:textColor="@color/colorLetra"
            android:textSize="@dimen/tamanio_letra"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.115"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="@dimen/tamanio_letra"
            android:gravity="center|top"
            android:textColor="@color/colorLetra"
            android:id="@+id/tv_puntos"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:text="Nombre"
            android:textSize="@dimen/tamanio_letra"
            android:textColor="@color/colorLetra"
            android:id="@+id/tv_nombre"/>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75">

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_pink"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="90dp"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="70dp" />

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_blue"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/col_pink"
                android:layout_toStartOf="@+id/col_pink"
                android:layout_marginTop="18dp" />

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_green"
                android:layout_alignTop="@+id/col_blue"
                android:layout_toLeftOf="@+id/col_blue"
                android:layout_toStartOf="@+id/col_blue"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="22dp" />

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_orange"
                android:layout_below="@+id/col_green"
                android:layout_alignRight="@+id/col_green"
                android:layout_alignEnd="@+id/col_green"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="14dp" />

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_yellow"
                android:layout_below="@+id/col_orange"
                android:layout_alignLeft="@+id/col_orange"
                android:layout_alignStart="@+id/col_orange"
                android:layout_marginTop="20dp" />

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_red"
                android:layout_below="@+id/col_yellow"
                android:layout_toLeftOf="@+id/col_blue"
                android:layout_toStartOf="@+id/col_blue" />

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_black"
                android:layout_alignTop="@+id/col_red"
                android:layout_toRightOf="@+id/col_red"
                android:layout_toEndOf="@+id/col_red"
                android:layout_marginLeft="29dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="17dp" />

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_white"
                android:layout_alignTop="@+id/col_yellow"
                android:layout_alignLeft="@+id/col_pink"
                android:layout_alignStart="@+id/col_pink"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
