<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_colores"
    tools:context="com.sena.jennyferlopez.englishkids.activities.dos.ColoresFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.035"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:id="@+id/tv_puntos"
            android:text="0"
            android:gravity="center|top"
            android:textColor="@color/colorLetra"
            android:textSize="@dimen/tamanio_letra"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.115"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="@dimen/tamanio_letra"
            android:gravity="center|top"
            android:textColor="@color/colorLetra"
            android:id="@+id/tv_puntosac"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:text="Nombre"
            android:textSize="@dimen/tamanio_letra"
            android:textColor="@color/colorLetra"
            android:id="@+id/tv_nombre"/>
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75">

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_pink"
                android:layout_alignParentRight="true"
                android:layout_marginRight="160dp"
                android:layout_marginTop="140dp"
                />

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_blue"
                android:layout_alignParentRight="true"
                android:layout_marginRight="250dp"
                android:layout_marginTop="45dp"
                />

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_green"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="165dp"
                />

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_orange"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="410dp"
                android:layout_marginLeft="120dp"/>

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_yellow"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="270dp"
                android:layout_marginLeft="120dp"
                />

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_red"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="165dp"
                android:layout_marginLeft="195dp"
                />

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="150dp"
                android:layout_marginRight="210dp"
                />

            <ImageView
                android:layout_width="@dimen/wh_color"
                android:layout_height="@dimen/wh_color"
                android:id="@+id/col_white"
               android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="250dp"
                android:layout_marginRight="135dp"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
