<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_escalera1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_escalera"
    tools:context="com.sena.jennyferlopez.englishkids.activities.nivel1.Escalera1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_puntos"
                android:text="0"
                android:textColor="@color/colorLetra"
                android:textSize="@dimen/tamanio_letra"
                tools:layout_editor_absoluteY="20dp"
                android:layout_gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Nombre"
                    android:gravity="right|center"
                    android:textSize="22sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorLetra"
                    android:id="@+id/tv_acumulado"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Nombre"
                    android:textSize="22sp"
                    android:gravity="center|left"
                    android:layout_marginRight="40dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorLetra"
                    android:id="@+id/tv_nombre"/>

            </RelativeLayout>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="50dp"
                android:paddingLeft="50dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar16"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar15"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar14"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar13"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar9"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar10"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar11"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar12"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar8"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar7"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar6"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar5"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar1"
/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar2"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar3"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:id="@+id/correAvatar4"
                        android:visibility="invisible"
                        android:background="@drawable/avatar_ninia"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.14">

        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>